@model CarouselDisplay
@using CarolineCottageMobile.Application.CarolineCottageDisplay

@{

    string carouselID = "carouselID" + Model.CarouselType.ToString("g");
    string active;
}
<div id="carousel@(carouselID)" class="carousel slide carousel-fade" data-ride="carousel">
    <ol class="carousel-indicators">
        @{
            active = "active";
            int imageCount = 0;
            foreach (var image in Model.ImageList)
            {
                <li data-target="#carousel@(carouselID)" data-slide-to="@imageCount" class="@active"></li>
                {
                    imageCount++;
                    active = "";
                }
            }
        }
    </ol>
    <div class="carousel-inner bg-light" style="width:100%; height: 300px !important;">
        @{
            active = "active";
            string path = Model.ImagePath;
            foreach (var image in Model.ImageList)
            {
                <div class="carousel-item @active">
                    <img src="@Url.Content(path + "/" + image.ImageName)" class="d-block w-100 car-image">
                </div>
                {
                    active = "";
                }
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carousel@(carouselID)" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel@(carouselID)" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>


</div>
